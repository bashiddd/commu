<div class="container">
    <div class="user">
        <div class="bio-left">
            <img src="<%= "/user_images/#{@user.image_name}" %>">
            <h2><%= @user.name %></h2>
        </div>
        <div class="bio-right">
            <div class="edit">
                <% if @current_user.id == @user.id %>
                    <%= link_to("編集", "/users/#{@user.id}/edit", class: "editbtn") %>
                <% end %>
            </div>
            <div class="bio">
                <p><%= @user.bio %></p>
            </div>
        </div>
    </div>
</div>